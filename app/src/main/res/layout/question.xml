<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/question_heading_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="172dp"
        android:text="Question 1"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/question_tv"
        android:layout_width="358dp"
        android:layout_height="104dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="25dp"
        android:textSize="15sp"
        android:text="Inside which HTML element do we put JavaScript Code? "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_heading_tv" />



        <Button
            android:id="@+id/option1_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Script"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@id/question_tv"
            android:layout_marginHorizontal="50dp"
            />

        <Button
            android:id="@+id/option2_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="javascript"
            app:layout_constraintTop_toBottomOf="@id/option1_b"
            android:layout_marginHorizontal="50dp"
            />

        <Button
            android:id="@+id/option3_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="html"
            app:layout_constraintTop_toBottomOf="@id/option2_b"
            android:layout_marginHorizontal="50dp"
            />

        <Button
            android:id="@+id/option4_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="body"
            app:layout_constraintTop_toBottomOf="@id/option3_b"
            android:layout_marginHorizontal="50dp"
            />

</androidx.constraintlayout.widget.ConstraintLayout>